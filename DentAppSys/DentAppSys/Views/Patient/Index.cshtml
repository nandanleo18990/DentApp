@model DentAppSys.Models.RegisterModel


@{
    ViewBag.Title = "Index";
}
@if (Session["UserEmail"] != null)
{
    <div align="right" style="width:auto;background:#728ea7;">
        <strong>@Model.Email</strong>
        @Html.ActionLink("Logout", "Logout", "User")
    </div>
}
else
{
    // @Html.ActionLink("Login&Register", "RegAndLogin", "User")

}



   

<section class="Patient-Info">

        <div class="Info-title">
            Personal Informations
        </div>
        <div class="Info-Content">
            <div>
                <span>
                    Firstname :
                </span>
                @Model.Firstname
            </div>
            <div>
                <span>
                    Lastname :
                </span>
                @Model.Lastname
            </div>
            <div>
                <span>
                    Birthday :
                </span>
                @Model.Birthday.ToString("MMMM dd,yyyy")
            </div>
            <div>
                <span>
                    Email :
                </span>
                @Model.Email
            </div>
        </div>
</section>

<section class="Patient-Menu">

    <nav class="p-menu">
        <ul id="Menu" class="clearfix">
            <li>@Html.ActionLink("Appointment", "Make", "Appointment")</li>
            <li>@Html.ActionLink("History", "", "")</li>
            <li>@Html.ActionLink("Documents", "", "")</li>
        </ul>

    </nav>

</section>

<section class="Patient-Dashboard">

    <div id="dashboard_left">
        </div>
    <div id="dashboard_right">
        <h1> Recent Appointments</h1>
        <div class="Info-Content">
            <div>
                <span>
                    Firstname :
                </span>
                @Model.Firstname
            </div>
            <div>
                <span>
                    Lastname :
                </span>
                @Model.Lastname
            </div>
            <div>
                <span>
                    Birthday :
                </span>
                @Model.Birthday.ToString("MMMM dd,yyyy")
            </div>
            <div>
                <span>
                    Email :
                </span>
                @Model.Email
            </div>
        </div>

    </div>
        
</section>
