<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/jquery-min.js")

    <script type="text/javascript">
        $(function () {
            var pull = $('#pull');
            menu = $('#Menu');
            menuHeight = menu.height();

            $(pull).on('click', function (e) {
                e.preventDefault();
                menu.slideToggle();
            });

            $(window).resize(function () {
                var w = $(window).width();
                if (w > 320 && menu.is(':hidden')) {
                    menu.removeAttr('style');
                }
            });
        });
    </script>

</head>
<body>

    <header class="Header-Fix">

        <nav class="Nav-menu">
            <ul id="Menu" class="clearfix">
                <li>@Html.ActionLink("Contact Us", "Contact", "Home")</li>
                <li><a href="#">About Us </a></li>
                <li>@Html.ActionLink("Login&Register", "RegAndLogin", "User")</li>
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
            </ul>
            <div id="pull" class="menu-b">&nbsp;</div>
            <div id="pull" class="menu-c"> <a class="Home" href="#"><img src="~/Content/images/logo.jpg" alt="" width="200" height="80" style="border:0;" /></a></div>


        </nav>
    </header>
    <div class="container">

        @RenderBody()

        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)

        <div class="TH-part" style="padding-top:1px;margin-bottom: 10px">
            <div style="display: block;position: relative;border-bottom: 2px solid #eaeaea;"></div>
        </div>
        <!-- Footer -->
        <div id="footer_content">
            <div id="footer_top">
                <div id="footer_left">
                    Email : Info@dentappsys.com
                    <br>
                    <br>
                    Tell : (+00) 00 - 0000000
                    <br>
                    <br>
                    Address :  Street - Country - City ( Zipcode )
                </div>
                <div id="footer_right">

                    Get the last news from our site<br />
                    <p>
                        You can submit your E-Mail here !
                    </p>
                    <br />
                    <input name="" type="text" class="footer_text_field"><input name="Submit" type="submit" value="submit" class="footer_btn">

                </div>
            </div>
            <footer id="footer">
                <p class="credits">&copy; 2014<a href="#"> DentAppSys</a></p>
            </footer>
        </div>





    </div>

    @if (IsSectionDefined("AddToEnd"))
    {
        @RenderSection("AddToEnd", required: false)
    }
</body>
</html>
